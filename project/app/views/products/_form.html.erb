<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "商品名", style: "display: block" %>
    <%= form.text_field :pname %>
  </div>

  <div>
    <%= form.label "描述", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label "单价", style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label "剩余货量", style: "display: block" %>
    <%= form.number_field :quantity, :value => 0, readonly: true %>
  </div>

  <div style="margin-top:10px;">
    <%= form.submit "创建商品" %>
  </div>
<% end %>
