<div id="<%= dom_id category %>">

  <hr />

  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <b>Recipes of this category:</b>
    <%= (category.recipes.collect{|recipe| recipe.title}).join(",") %>
    <%= link_to '<button>back to recipes</button>'.html_safe, recipes_url %>
  </p>

</div>
